{
  "layer": "top",
  "position": "top",
  "height": 30,
  "modules-left": [
    "hyprland/workspaces",
    "custom/music"
  ],
  "modules-center": [
    "hyprland/window"
  ],
  "modules-right": [
    "idle_inhibitor",
    "pulseaudio",
    "network",
    "cpu",
    "memory",
    "battery",
    "tray",
    "clock"
  ],
  "pulseaudio/slider": {
    "min": 0,
    "max": 100,
    "orientation": "horizontal"
  },
  "hyprland/workspaces": {
    "disable-scroll": true,
    "all-outputs": true,
    "format": "{windows}",
    "format-icons": {
      "visible": "",
      "active": "",
      "default": ""
    },
    "window-rewrite-default": "󰘔",
    "window-rewrite": {
      "title<.*(tmux|zsh).*>": "",
      "title<.*firefox.*>": "󰈹",
      "title<.*calendar.*>": "󰸗",
      "title<.*mail.*>": "",
      "title<.*password.*>": "󰟵",
      "title<.*youtube.*>": "",
      "title<.*zoom.*>": "",
      "title<.*(telegram.*|\\(\\d+\\)$)>": "",
      "title<.*slack.*>": "󰒱",
      "title<.*signal.*>": "󰭹",
      "title<.*discord.*>": "󰙯"
    }
  },
  "idle_inhibitor": {
    "format": "{icon}",
    "format-icons": {
      "activated": "",
      "deactivated": ""
    }
  },
  "tray": {
    "icon-size": 14,
    "spacing": 10
  },
  "clock": {
    "format": "{:%a, %e %b at %I:%M %p}",
    "format-alt": "{:%Y-%m-%d - %H:%M}"
  },
  "cpu": {
    "format": "{usage}% ",
    "on-click": "wezterm -e btop"
  },
  "memory": {
    "interval": 30,
    "format": "{used:0.1f}/{total:0.1f}G "
  },
  "network": {
    "format-wifi": "{essid} ({signalStrength}%) ",
    "format-ethernet": "{ifname}: {ipaddr} ",
    "format-disconnected": "Disconnected ⚠"
  },
  "pulseaudio": {
    "format": "{volume}% {icon}",
    "format-bluetooth": "{volume}% {icon}",
    "format-muted": "",
    "format-icons": {
      "headphones": "",
      "handsfree": "",
      "headset": "",
      "phone": "",
      "portable": "",
      "car": "",
      "default": [
        "",
        ""
      ]
    },
    "on-click": "pavucontrol"
  },
  "custom/music": {
    "format": "  {}",
    "max-length": 60,
    "interval": 5,
    "exec": "$HOME/.config/waybar/mediaplayer.sh 2> /dev/null",
    "tooltip": false,
    "on-click": "playerctl play-pause",
    "on-scroll-up": "playerctl previous",
    "on-scroll-down": "playerctl next"
  }
}
